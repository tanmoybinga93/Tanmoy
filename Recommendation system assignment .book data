library("recommenderlab")
library(caTools)
book_data <- read.csv(file.choose())
View(book_data)
str(book_data)
hist(book_data$Book.Rating)
book_data_matrix <- as(book_data,'realRatingMatrix')
book_model1 <- Recommender(book_data_matrix, method='POPULAR')
recommend_book <- predict(book_model1, book_data_matrix, n=10)
as(recommend_book, "list")
book_recom_model2<- Recommender(book_recom_matrix,method="UBCF")
recommended_item2<- predict(book_recom_model2, book_recom_matrix,n=10)
as(recommended_item2,"list")
